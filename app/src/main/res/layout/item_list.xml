<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_list_height"
    android:paddingEnd="@dimen/padding_regular"
    android:paddingStart="@dimen/padding_regular">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageView_icon"
        android:layout_width="@dimen/item_list_image_view_size"
        android:layout_height="@dimen/item_list_image_view_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/imageView_icon"
        android:layout_toRightOf="@+id/imageView_icon"
        android:text="@string/item_grid_description"/>

</RelativeLayout>